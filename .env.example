APP_URL=http://localhost:4000
APP_NAME=MyAPI

# Authentication Configuration
# AUTH_MODE: Controls authentication flow - 'graphql' (default), 'rest', or 'hybrid'
# - graphql: Magic links point to frontend for GraphQL-based verification
# - rest: Magic links point to API REST endpoints with redirect-based flow
# - hybrid: Both GraphQL and REST endpoints are available
AUTH_MODE=graphql

# Frontend URLs for REST mode authentication flow
# FRONTEND_SUCCESS_URL: Where users are redirected after successful authentication
FRONTEND_SUCCESS_URL=http://localhost:3000

# FRONTEND_ERROR_URL: Where users are redirected after authentication errors
FRONTEND_ERROR_URL=http://localhost:3000/login?error=auth_failed

# INCLUDE_USER_DATA_IN_REDIRECT: Include user data in redirect URL parameters (true/false)
INCLUDE_USER_DATA_IN_REDIRECT=false

# ALLOWED_REDIRECT_DOMAINS: Comma-separated list of allowed domains for redirects
# Supports wildcards (*.domain.com) for subdomains
ALLOWED_REDIRECT_DOMAINS=localhost,yourdomain.com,*.yourdomain.com

# APP_SUPPORT_MAIL: Support email address shown in magic link emails
APP_SUPPORT_MAIL=support@yourdomain.com

